<h1>/<%= @board.slug %>/ - <%= @board.title %></h1>
<%= render "form.html" %>
<div class="threads">
<%= for thread <- @threads do %>
    <div class="thread">
        <hr>
        <div class="post">
            <p class="intro">
                <span class="name"><%= thread.name %></span>
                <time><%= thread.inserted_at %></time>
                No. <%= thread.id %>
            </p>
            <p class="body"><%= thread.body %></p>
        </div>
    </div>
<% end %>
</div>
