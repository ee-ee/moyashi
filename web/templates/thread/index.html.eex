<h1>/<%= @board.slug %>/ - <%= @board.title %></h1>
<%= render "form.html",
    changeset: @changeset,
    action: thread_path(@conn, :create, @board.slug) %>
<div class="threads">
<%= for thread <- @threads do %>
    <%= render "thread.html",
        conn: @conn,
        board: @board,
        thread: thread,
        action: "index" %>
<% end %>
</div>
